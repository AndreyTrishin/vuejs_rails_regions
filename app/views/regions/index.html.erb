<p id="notice"><%= notice %></p>

<h1>Regions</h1>
<app></app>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Population</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.name %></td>
        <td><%= region.population %></td>
        <td><%= link_to 'Show', region %></td>
        <td><%= link_to 'Edit', edit_region_path(region) %></td>
        <td><%= link_to 'Destroy', region, method: :delete, data: { confirm: 'Are you sure?' }%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Region', new_region_path %>


<div class="container" data-behavior="vue">

  <app :message="<%= @regions.to_json %>"></app>

</div>
